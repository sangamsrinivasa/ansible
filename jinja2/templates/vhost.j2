<VirtualHost *:80>
    ServerAdmin {{ server_admin }}
    DocumentRoot {{ document_root }}
    ServerName {{ server_name }}
    ErrorLog {{ error_log }}
    CustomLog {{ custom_log }} combined

    <Directory "{{ document_root }}">
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>

